{
  "name": "simple-react-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "간단한 React와 상태관리 라이브러리 모음",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "publish:all": "npm run build && npm publish --workspaces --access public"
  },
  "keywords": ["react", "state-management", "monorepo"],
  "author": "hyeongjun6364",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyeongjun6364/simple-react.git"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  }
}
